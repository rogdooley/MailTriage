<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.mailtriage.watch.hourly</string>

    <key>ProgramArguments</key>
    <array>
      <string>/bin/bash</string>
      <string>-lc</string>
      <string>$MAILTRIAGE_REPO/scripts/run_watch_mailtriage_launchd.sh</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
      <key>MAILTRIAGE_REPO</key>
      <string>/path/to/MailTriage</string>
      <key>MAILTRIAGE_CONFIG</key>
      <string>/path/to/MailTriage/config.yml</string>
      <key>MAILTRIAGE_POLICY</key>
      <string>/path/to/MailTriage/daily.policy.yml</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>StartInterval</key>
    <integer>3600</integer>

    <key>StandardOutPath</key>
    <string>/dev/null</string>
    <key>StandardErrorPath</key>
    <string>/dev/null</string>
  </dict>
</plist>
